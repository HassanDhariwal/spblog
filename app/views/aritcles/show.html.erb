<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @aritcle.title %>
</p>

<p>
  <strong>Post:</strong>
  <%= @aritcle.post %>
</p>

<p>
  <strong>User:</strong>
  <%= @aritcle.user_id %>
</p>

<h2>Comments</h2>
<% @aritcle.comments.each do |comment| %>
	<p> 
		<strong>Commenter:</strong>
		<%= comment.commenter %>
	</p>

	<p> <strong>Comment:</strong>
		<%= comment.body %>
	</p>
	<% end %>
	
	<h2> Add a Comment:</h2>
	
	<%= form_for([@aritcle, @aritcle.comments.build]) do |f| %>
	<p>
		<%= f.label :commenter %>
		<br />
		<%= f.text_field :commenter %>
	</p>

	<p>
		<%=  f.label :body  %>
		<br />
		<%= f.text_area :body %>
	</p>

	<p> 
		<%= f.submit %>

	</p>
	<% end %>



<%= link_to 'Edit', edit_aritcle_path(@aritcle) %> |
<%= link_to 'Back', aritcles_path %>
