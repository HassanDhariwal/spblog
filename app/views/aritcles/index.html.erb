<p id="notice"><%= notice %></p>

<h1>Aritcles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Post</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aritcles.each do |aritcle| %>
      <tr class="<%=cycle('list_line _odd', 'list_line_even') %>>">
        <td><%= aritcle.title %></td>
        <td><%= aritcle.post %></td>
        <td><%= aritcle.user_id %></td>
        <td><%= link_to 'Show', aritcle_path(aritcle) %></td>
        <td><%= link_to 'Edit', edit_aritcle_path(aritcle) %></td>
        <td><%= link_to 'Destroy', aritcle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Aritcle', new_aritcle_path %>
